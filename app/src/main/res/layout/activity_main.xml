<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:background="@drawable/view_background"
        android:layout_alignParentTop="true"
        android:padding="35dp"
        android:layout_above="@id/game_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginTop="20dp"
            android:padding="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.game.tetris.TetrisGameView
                android:id="@+id/game_view"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="400dp"/>
            <me.game.engine.view.score.ScoreView
                android:id="@+id/score_view"
                android:background="#9AA987"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="400dp"/>
        </LinearLayout>
        <ImageView
            android:layout_alignTop="@id/ll"
            android:layout_alignBottom="@id/ll"
            android:src="@drawable/game_view_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <me.game.engine.control.GameControl
        android:id="@+id/game_control"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
