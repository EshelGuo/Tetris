<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="move_control_style">
        <item name="android:layout_width">@dimen/move_control_size</item>
        <item name="android:layout_height">@dimen/move_control_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="action_control_style">
        <item name="android:layout_width">@dimen/action_control_size</item>
        <item name="android:layout_height">@dimen/action_control_size</item>
        <item name="android:background">@null</item>
    </style>

</resources>
